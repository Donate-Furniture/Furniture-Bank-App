// 1. GENERATOR: Configures the Prisma Client (the type-safe library we will use to query the database)
generator client {
  provider = "prisma-client-js"
}

// 2. DATASOURCE: Connects to your PostgreSQL database using the URI in .env.local
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------
// CORE MODELS
// ------------------------------------------------

// The User Model: Stores all user information
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String?   // Password is optional (Social users won't have one)

  //Fields to identify social login users
  provider      String?   // e.g., "google", "facebook", "credentials" (for email/pass)
  providerId    String?   // The unique ID returned by the social platform
  
  //Contact & Address Fields
  firstName     String
  lastName      String

  phoneNumber   String?
  streetAddress String?
  postalCode    String?
  city          String?
  province      String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  listings      Listing[]
  accounts      Account[] // Relation to NextAuth Account
  sessions      Session[] // Relation to NextAuth Session

  // Messaging Relations
  sentMessages     Message[]  @relation("SentMessages")
  receivedMessages Message[]  @relation("ReceivedMessages")

  @@map("users")
}

// The User Model: Stores all listing information
model Listing {
  id              String    @id @default(uuid())
  title           String    @db.VarChar(255)
  description     String
  category        String    
  subCategory     String?   

  originalPrice   Float     // The Bill Price
  purchaseYear    Int       // To calculate Age
  condition       String    // 'like_new', 'excellent', 'well_used'
  
  // Valuation & Result
  isValuated      Boolean   @default(false) 
  valuationPrice  Float?    // Professional appraisal (Overrides algo)
  estimatedValue  Float?    // ThQe FINAL calculated price to show (Algo result OR Valuation)

  // REMOVED: price Float? (User asking price is gone)
  
  status          String    @default("available") 
  city            String
  zipCode         String?
  
  
  imageUrls       String[]  // Main item photos (Min 4)
  receiptUrl      String?   // Separate receipt photo

  collectionDeadline DateTime
  
  userId          String
  user            User      @relation(fields: [userId], references: [id]) 

  messages        Message[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@map("listings")
}

// --------------------------------------
// 3. NEXTAUTH MODELS
// --------------------------------------

model Account {
  id                 String  @id @default(uuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// --------------------------------------
// 4. MESSAGING MODEL
// --------------------------------------

model Message {
  id          String   @id @default(uuid())
  content     String   @db.Text
  
  // Who sent it
  senderId    String
  sender      User     @relation("SentMessages", fields: [senderId], references: [id])
  
  // Who received it
  recipientId String
  recipient   User     @relation("ReceivedMessages", fields: [recipientId], references: [id])
  
  // Context (Which item is this about?)
  listingId   String?
  listing     Listing? @relation(fields: [listingId], references: [id])

  read        Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@map("messages")
}