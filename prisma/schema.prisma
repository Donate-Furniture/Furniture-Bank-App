// 1. CONFIGURATION
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Enum for User Roles
enum Role {
  USER
  ADMIN
}

// --------------------------------------
// 2. USER MODEL (The Core Identity)
// --------------------------------------

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  // Password is optional (?) because users logging in via Google/Facebook won't have one.
  password String?

  firstName String?
  lastName  String?

  // Profile Details (Added for the donation receipt logic)
  phoneNumber   String?
  streetAddress String?
  city          String?
  province      String?
  postalCode    String?

  //Role field (Default is USER)
  role          Role      @default(USER)

  // Metadata for OAuth (e.g., 'google', 'facebook')
  provider   String?
  providerId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RELATIONSHIPS
  // One user can have many listings
  listings Listing[]

  // One user can have many accounts/sessions (Required for NextAuth)
  accounts Account[]
  sessions Session[]

  // Messaging: A user can be the sender OR the recipient
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  isBlocked     Boolean   @default(false)

  reportsMade      Report[]   @relation("Reporter")
  reportsReceived  Report[]   @relation("ReportedUser")

  @@map("users") // Takes this model and names the actual DB table "users"
}

// --------------------------------------
// 3. LISTING MODEL (The Item)
// --------------------------------------

model Listing {
  id          String  @id @default(uuid())
  title       String  @db.VarChar(255)
  description String
  category    String // e.g., 'Furniture', 'Vehicles'
  subCategory String? // e.g., 'Desk', 'Sedan'

  // PRICING ALGORITHM FIELDS
  // These are the raw inputs used to calculate value
  originalPrice Float
  purchaseYear  Int
  condition     String // 'new', 'used_like_new', 'used'

  // VALUATION & RESULT
  isValuated     Boolean @default(false)
  valuationPrice Float? // If set, this overrides the algorithm
  estimatedValue Float? // The final number shown on the tax receipt

  status String @default("available") // 'available', 'on_hold', 'donated'

  // LOGISTICS
  city               String
  zipCode            String?
  collectionDeadline DateTime // When does it need to be gone by?

  // IMAGES
  imageUrls  String[] // Array of Vercel Blob URLs
  receiptUrl      String[]  
  valuationDocUrl String[]  

  // RELATIONSHIPS
  userId String
  user   User   @relation(fields: [userId], references: [id])

  messages Message[] // Messages specifically about this item

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isApproved      Boolean   @default(false) // Pending by default
  approvedAt      DateTime? 

  reports         Report[]

  @@map("listings")
}

// --------------------------------------
// 4. MESSAGING MODEL
// --------------------------------------

model Message {
  id      String @id @default(uuid())
  content String @db.Text

  // LINKING PEOPLE
  senderId String
  sender   User   @relation("SentMessages", fields: [senderId], references: [id])

  recipientId String
  recipient   User   @relation("ReceivedMessages", fields: [recipientId], references: [id])

  // LINKING CONTEXT
  // We link the message to a listing so we know WHAT they are talking about
  listingId String?
  listing   Listing? @relation(fields: [listingId], references: [id])

  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("messages")
}

// --------------------------------------
// 5. NEXTAUTH MODELS (Boilerplate)
// --------------------------------------
// These three tables (Account, Session, VerificationToken) are strictly required
// by the NextAuth Prisma Adapter to handle social logins and sessions.

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// --------------------------------------
// 6. REPORT MODEL
// --------------------------------------
model Report {
  id        String   @id @default(uuid())
  reason    String
  details   String?
  status    String   @default("pending") // 'pending', 'resolved', 'dismissed'

  // Who submitted the report?
  reporterId String
  reporter   User   @relation("Reporter", fields: [reporterId], references: [id])

  // What was reported? (One of these will be set)
  reportedListingId String?
  reportedListing   Listing? @relation(fields: [reportedListingId], references: [id])

  reportedUserId    String?
  reportedUser      User?    @relation("ReportedUser", fields: [reportedUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("reports")
}